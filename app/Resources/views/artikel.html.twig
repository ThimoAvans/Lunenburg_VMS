{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
	<div class="row">
		

		<div class="col-md-12">
			<h2>Artikelen overzicht</h2>

			<div class="table-responsive">


				<table id="mytable" class="table table-bordred table-striped table-hover">
								
					<thead>

						<th>Artikelnummer</th>
						<th>Omschrijving</th>
						<th>Magazijnlocatie</th>
						<th>Inkoopprijs</th>
						<th>Huidige voorraad</th>
						<th>Minimum voorraad</th>
						<th>Bestelserie</th>

						<th>Wijzigen</th>
					</thead>
					{% for artikel in artikelen %}
					<tbody>

						<tr>
							<th>{{ artikel.artikelnummer }} </th>
							<th>{{ artikel.omschrijving }} </th>
							<th>{{ artikel.magazijnlocatie}} </th>
							<th>{{ artikel.inkoopprijs}} </th>
							<th>{{ artikel.huidigeVoorraad }} </th>
							<th>{{ artikel.minimumVoorraad }} </th>
							<th>{{ artikel.bestelserie }} </th> 
							

							<td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" href="{{ path('artikelwijzigen', {'artikelnummer':artikel.artikelnummer}) }}">Wijzig</a></p></td>
							<td><p data-placement="top" data-toggle="tooltip" title="Delete"><a class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" href="{{ path('artikelverwijderen', {'artikelnummer':artikel.artikelnummer}) }}">Verwijder</a></p></td>
						</tr>
					</tbody>
							{% endfor %}	
				</table>

				<div class="clearfix"></div>
				<ul class="pagination pull-right">
					<li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
					<li class="active"><a href="#">1</a></li>
					<li><a href="#">2</a></li>
					<li><a href="#">3</a></li>
					<li><a href="#">4</a></li>
					<li><a href="#">5</a></li>
					<li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
				</ul>

			</div>

		</div>
	</div>
</div>
{% endblock %}