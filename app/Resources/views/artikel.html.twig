{% extends 'base.html.twig' %}
{% block body %}
	<h2>Overzicht van alle artikelen</h2>
	<ul>
	{% for artikel in artikelen %}
	<li>
		Artikelnummer: {{ artikel.artikelnummer }}, 
		Omschrijving: {{ artikel.omschrijving }}, </BR>
		Huidige voorraad: {{ artikel.huidigeVoorraad }}, 
		Minimum voorraad: {{ artikel.minimumVoorraad }},
		Bestelserie: {{ artikel.bestelserie }} 
		<a href="{{ path('artikelwijzigen', {'artikelnummer':artikel.artikelnummer}) }}">Wijzig</a>
		<a href="{{ path('artikelverwijderen', {'artikelnummer':artikel.artikelnummer}) }}">Verwijder</a> </BR></BR>
	</li>
	{% endfor %}
	</ul>
{% endblock %}