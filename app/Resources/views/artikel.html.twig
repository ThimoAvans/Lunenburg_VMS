{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
	<div class="row">
		

		<div class="col-md-12">
			<h2>Artikelen overzicht</h2>

			<div class="table-responsive">


				<table id="mytable" class="table table-bordred table-striped table-hover">
								
					<thead>

						<th>Artikel- nummer</th>
						<th>Naam</th>
						<th>Omschrijving</th>
						<th>Technische specificaties</th>
						<th>Magazijn- locatie</th>
						<th>Inkoop- prijs</th>
						<th>Huidige voorraad</th>
						<th>Minimum voorraad</th>
						<th>Bestel- serie</th>
						<th>Vervangend artikel</th>

						<th>Wijzigen</th>
						<th>Verwijderen</th>
					</thead>
					{% for artikel in artikelen %}
					<tbody>

						<tr>
							<th> {{ artikel.artikelnummer }} </th>
							<th> {{ artikel.naam }} </th>
							<th> {{ artikel.omschrijving }} </th>
							<th> {{ artikel.technischeSpecificaties }} </th>
							<th> {{ artikel.magazijnlocatie}} </th>
							<th>â‚¬{{ artikel.inkoopprijs}} </th>
							<th> {{ artikel.huidigeVoorraad }} </th>
							<th> {{ artikel.minimumVoorraad }} </th>
							<th> {{ artikel.bestelserie }} </th>
							<th> {{ artikel.vervangendArtikel }} </th> 


							<td><a class="btn btn-primary btn-xs" Title="Artikel wijzigen"  href="{{ path('artikelwijzigen', {'artikelnummer':artikel.artikelnummer}) }}">Wijzig</a></td>
							<td> <a class="btn btn-danger btn-xs" Title="Artikel verwijderen"  href="{{ path('artikelverwijderen', {'artikelnummer':artikel.artikelnummer}) }}">Verwijder</a></td>

						</tr>
					</tbody>
					{% endfor %}	
				</table>

				<div class="clearfix"></div>
				<ul class="pagination pull-right">
					<li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
					<li class="active"><a href="#">1</a></li>
					<li><a href="#">2</a></li>
					<li><a href="#">3</a></li>
					<li><a href="#">4</a></li>
					<li><a href="#">5</a></li>
					<li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
				</ul>

			</div>

		</div>
	</div>
</div>
{% endblock %}