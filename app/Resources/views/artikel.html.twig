{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
	<div class="row">
		

		<div class="col-md-12">
			<h2>Artikelen overzicht</h2>

			<div class="table-responsive">


				<table id="mytable" class="table table-bordred table-striped table-hover">
								
					<thead>

						<th>Artikelnummer</th>
						<th>Omschrijving</th>
						<th>Magazijnlocatie</th>
						<th>Inkoopprijs</th>
						<th>Huidige voorraad</th>
						<th>Minimum voorraad</th>
						<th>Bestelserie</th>

						<th>Wijzigen</th>
						<th>Verwijderen</th>
					</thead>
					{% for artikel in artikelen %}
					<tbody>

						<tr>
							<th>{{ artikel.artikelnummer }} </th>
							<th>{{ artikel.omschrijving }} </th>
							<th>{{ artikel.magazijnlocatie}} </th>
							<th>{{ artikel.inkoopprijs}} </th>
							<th>{{ artikel.huidigeVoorraad }} </th>
							<th>{{ artikel.minimumVoorraad }} </th>
							<th>{{ artikel.bestelserie }} </th> 


							<td><a class="btn btn-primary btn-xs" Title="Artikel wijzigen"  href="{{ path('artikelwijzigen', {'artikelnummer':artikel.artikelnummer}) }}">Wijzig</a></td>
							<td> <a class="btn btn-danger btn-xs" Title="Artikel verwijderen"  href="{{ path('artikelverwijderen', {'artikelnummer':artikel.artikelnummer}) }}">Verwijder</a></td>

							<td><button type="button" class="btn btn-primary btn-sm"><a href="{{ path('artikelwijzigen', {'artikelnummer':artikel.artikelnummer}) }}" style="color:white" >Wijzig</a></button></td>
							<td><button type="button" class="btn btn-danger btn-sm"><a href="{{ path('artikelverwijderen', {'artikelnummer':artikel.artikelnummer}) }}" style="color:white" onclick="return confirm('Weet u zeker dat u dit artikel wilt verwijderen?')"	>Verwijder</a></button></td>

						</tr>
					</tbody>
							{% endfor %}	
				</table>

				<div class="clearfix"></div>
				<ul class="pagination pull-right">
					<li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
					<li class="active"><a href="#">1</a></li>
					<li><a href="#">2</a></li>
					<li><a href="#">3</a></li>
					<li><a href="#">4</a></li>
					<li><a href="#">5</a></li>
					<li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
				</ul>

			</div>

		</div>
	</div>
</div>
{% endblock %}