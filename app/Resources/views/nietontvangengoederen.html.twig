{% extends 'base.html.twig' %}
{% block body %}
<style>
    tr{
        border: none !important;
    }
    th{
        border: none !important;
    }
    tbody{
        border: none !important;
    }
</style>
<div class="container">
    <div class="row">


        <div class="col-md-12">
            <h2>Overzicht van nog te ontvangen goederen</h2>

            <div class="table-responsive">


                <table id="mytable" class="table table-bordred table-striped table-hover">

                    <thead>

                        <th>Ontvangstnummer</th>
                        <th>Datum ontvangst</th>
                        <th>Leverancier</th>
                        <th>Kwaliteit</th>
                        <th>Ontvangen</th>

                        
                    </thead>
                    {% for nietgoederen in nietgoederen %}
                    <tbody>


                            <td>{{nietgoederen.ontvangstnummer}} </td>
                            <td>{{ nietgoederen.datumontvangst|date('Y-m-d') }} </td>
                            <td>{{nietgoederen.leverancier}} </td>
                            <td>{{nietgoederen.kwaliteit}} </td>
                            <td>{{nietgoederen.ontvangen}} </td> 
                            
                            <td><a class="btn btn-primary btn-xs" Title="Goederen bekijken"  href="{{ path('goederenopdrachtbekijken', {'ontvangstnummer':nietgoederen.ontvangstnummer}) }}">Bekijk</a></td>
                            <td><a class="btn btn-primary btn-xs" Title="Goederen wijzigen"  href="{{ path('ontvangstmeldingWijzigen', {'ontvangstnummer':nietgoederen.ontvangstnummer}) }}">Wijzig</a></td>
                            <td> <a class="btn btn-danger btn-xs" Title="Goederen verwijderen"  href="{{ path('ontvangstmeldingVerwijderen', {'ontvangstnummer':nietgoederen.ontvangstnummer}) }}">Verwijder</a></td>

                            </tr>
                        </tbody>
                        {% endfor %}    
                    </table>
            </div>
        </div>
    </div>
    {% endblock %}