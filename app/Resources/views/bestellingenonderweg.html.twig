{% extends 'base.html.twig' %}
{% block body %}
<style>
.col-md-12 {
	display: block;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 2;
    border-radius: 25px;
      padding: 10px; 
}
	tr{
		border: none !important;
	}
	th{
		border: none !important;
	}
	tbody{
		border: none !important;
	}
</style>
<div class="container">
	<div class="row">
		

		<div class="col-md-12">
			<h2>Te ontvangen goederen</h2>

			<div class="table-responsive">

				<table id="mytable" class="table table-bordred table-striped table-hover">

					<thead>

						<th>Bestelnummer</th>
						<th>Artikelnummer</th>
						<th>Hoeveelheid</th>
						<th>Status</th>
						<th>Ontvangst Melden</th>

					</thead>
					{% for bestelregel in bestelregels %}
					<tbody>

						<tr style="background-color: white;">
							<td>{{ bestelregel.bestelnummer }} </td>
							<td>{{ bestelregel.artikelnummer}} </td>
							<td>{{ bestelregel.hoeveelheid}} </td>
							<td>{{ bestelregel.status}} </td>

							<td><a class="btn btn-success btn-xs" Title="Ontvangst melden"  href="{{ path('meldontvangst', {'id':bestelregel.id}) }}">Ontvangst melden</a></td>
						</tr>

					</tbody>
					{% endfor %}	
				</table>
		</div>
	</div>
</div>
{% endblock %}