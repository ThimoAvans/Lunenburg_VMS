{% extends 'base.html.twig' %}
{% block body %}
<style>
.col-md-12 {
	display: block;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 2;
    border-radius: 25px;
      padding: 10px; 
}	
	tr{
		border: none !important;
	}
	th{
		border: none !important;
	}
	tbody{
		border: none !important;
	}
</style>
<div class="container">
	<div class="row">
		

		<div class="col-md-12">
			<h2>Alle bestellingen</h2>

			<div class="table-responsive">


				<table id="mytable" class="table table-bordred table-striped table-hover">

					<thead>

						<th>Bestelordernummer</th>
						<th>Leverancier</th>

						<th>Bekijken</th>	

					</thead>
					{% for bestelling in bestellingen %}
					<tbody>

						<tr style="background-color: white;">
							<td>{{ bestelling.bestelnummer }} </td>
							<td>{{ bestelling.leverancier}} </td>
							
							<td><a class="btn btn-primary btn-xs" Title="Bestelling bekijken"  href="{{ path('bestellingbekijken', {'bestelnummer':bestelling.bestelnummer}) }}">Bekijk</a></td>

						</tr>
					</tbody>
					{% endfor %}	
				</table>
		</div>
	</div>
</div>
{% endblock %}