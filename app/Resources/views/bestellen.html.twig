{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
	<div class="row">
		

		<div class="col-md-12">
			<h2>Bestel overzicht</h2>

			<div class="table-responsive">


				<table id="mytable" class="table table-bordred table-striped table-hover">

					<thead>

						<th>Bestelordernummer</th>
						<th>Artikelnummer</th>
						<th>Leverancier</th>
						<th>Hoeveelheid</th>

						<th>Wijzigen</th>
					</thead>
					{% for bestelorder in bestelorders %}
					<tbody>

						<tr>
							<th>{{ bestelorder.bestelordernummer }} </th>
							<th>{{ bestelorder.artikelnummer }} </th>
							<th>{{ bestelorder.leverancier}} </th>
							<th>{{ bestelorder.hoeveelheid}} </th>
							

							<td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" href="{{ path('bestelorderwijzigen', {'id':bestelorder.bestelordernummer}) }}">Wijzig</a></p></td>
							<td><p data-placement="top" data-toggle="tooltip" title="Delete"><a class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" href="{{ path('bestelorderverwijderen', {'id':bestelorder.bestelordernummer}) }}">Verwijder</a></p></td>
						</tr>
					</tbody>
					{% endfor %}	
				</table>

				<div class="clearfix"></div>
				<ul class="pagination pull-right">
					<li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
					<li class="active"><a href="#">1</a></li>
					<li><a href="#">2</a></li>
					<li><a href="#">3</a></li>
					<li><a href="#">4</a></li>
					<li><a href="#">5</a></li>
					<li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
				</ul>

			</div>

		</div>
	</div>
</div>
{% endblock %}